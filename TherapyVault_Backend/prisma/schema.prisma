generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Profile {
    id     Int  @id @default(autoincrement())
    user   User @relation(fields: [id], references: [id])
    userId Int  @unique
}

model User {
    id       Int      @id @default(autoincrement())
    username     String?  @unique @db.VarChar(255)
    password String?  @db.VarChar(255)
    profile  Profile?
    upload   Upload?
}

model Upload {
    id         Int        @id @default(autoincrement())
    title      String     @db.VarChar(255)
    author     User       @relation(fields: [id], references: [id])
    categories Category[] @relation
}

model Category {
    id         Int      @id @default(autoincrement())
    categories String?  @db.VarChar(255)
    Upload     Upload[]
}
